<header>
  <div class="site-branding">
    <h1 class="site-title">
      <a href="<%- config.root %>"><%= config.title %></a>
    </h1>
    <p class="site-description"><% if (config.subtitle){ %><%= config.subtitle %><% } %></p>
  </div>
  <nav class="site-navigation">
    <ul>
      <% for (var i in theme.menu){ %>
        <li><i class="<%- theme.menu[i]['icon'] %>"></i><a href="<%- url_for(theme.menu[i]['directory']) %>"><%= __(theme.menu[i]['name']) %></a></li>
      <% } %>
    </ul>
  </nav>
</header>
