article.archive
  padding 0
  margin 2em auto

.archive-post
  font-size 16px
  text-align left
  margin 1em auto

  .archive-title
    line-height 1
    position relative
    color #6E7173
    margin 0 0.8em

    a
      color #000000
      
     span
        padding-bottom 2px
        -webkit-transition box-shadow 0.15s
        transition box-shadow 0.15s
        box-shadow inset 0 -2px 0 rgba(0, 0, 0, 0)
 
      &:hover
        color #000000

        span
          box-shadow inset 0 -2px 0 rgba(0, 0, 0, 1)
   
  time
    margin-left -0.3em
    color #666666
