$hackerRed = #336600
$hackerGray = #9e9e9e
$articleTitleColor = #000000
$articleTextColor = #424242

article
  position relative
  padding 6rem 0

  a
    color $hackerRed
    
    &:hover
      color $articleTitleColor

  &:not(:first-child):before
    content ''
    width 150px
    height 1px
    background-color: #e0e0e0
    position absolute
    top 0
    left 50%
    margin-left -75px

  blockquote
    margin 6rem 1.5rem
    padding-left 15px
    line-height 2rem
    border-left 4px solid $hackerRed

  .article-title
    position relative
    color $articleTitleColor
    font-size 2rem
    line-height 1.3
    text-align left
    margin 0

    a
      display block
      color $articleTitleColor

      span
        padding-bottom 3px
        -webkit-transition 0.15s
        transition 0.15s
        box-shadow inset 0 -2px 0 rgba(102, 102, 102, 0)

      &:hover
        color $articleTitleColor

        span
          box-shadow inset 0 -2px 0 $articleTitleColor

  .article-top-meta
    position relative
    color $hackerGray
    font-size 1.3rem
    text-align left
    margin 1rem 0

    a
      color $hackerGray
      &:hover
        color $hackerRed

      time
        font-style italic

  .article-excerpt, .article-content, .featured-media
    margin 2rem 0
    font-size 1.6rem
    color $articleTextColor
  
  .article-content
    .alignleft 
      background-color #CCCCCC
      display inline-block
      padding 10px 20px

      &:hover
        background-color #666666
        
        a
          color #FFF 
     
    img
      max-width: 100%
      height auto
      margin 1rem auto

  .article-donate
    #donate-board
      text-align center
    #donate-imgs       
      text-align center
      margin 1.5em 0      
      overflow hidden

      .donate-img
        display inline-block
        margin-right 1.2em       
          

  .article-footer
    .pull-left
      float left
    .pull-right
      float right

    &:after
      content " "
      display block
      clear both

    .article-meta > span:not(:last-child)
      margin-right 3rem

    .article-meta > span
      display inline-block

    .article-meta > span > span
      line-height 1
      vertical-align middle

    .article-meta
      font-size 1.3rem
      color $hackerGray

      a
        color $hackerGray
        &:hover
          color $hackerRed

      i
        vertical-align middle
        color $hackerGray
        margin-right 0.5rem

    .post-tags
      a
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px


  code
    padding 2px 4px
    margin-left 2px
    margin-right 2px
    color #c7254e
    white-space normal
    border-radius 0

  p
    margin 2rem 0
    line-height 1.8

  .video-container
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 0;
    height: 0;
    overflow: hidden;

    iframe
      position: absolute;
      top:0;
      left: 0;
      width: 100%;
      height: 100%;

  table
    max-width 100%
    width 100%

    caption
      padding 5px
      color #333
      background-color #e5e5e5

    th, td
      text-align left
      padding 0.6em
      vertical-align top

    th
      vertical-align bottom
      border-bottom 1px solid #e5e5e5

    tbody + tbody
      border-top 2px solid #e5e5e5

    .table
      background-color #fff


    .table-bordered
      border 1px solid #e5e5e5

    .table-striped tbody tr:nth-of-type(odd)
      background-color:#f2f2f2

